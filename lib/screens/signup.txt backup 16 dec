// ===================================================================
// PHONE ENTRY SCREEN â€“ LOCKED TO REAL SIM CARD NUMBER
// ===================================================================
class PhoneEntryScreen extends StatefulWidget {
  const PhoneEntryScreen({super.key});
  @override
  State<PhoneEntryScreen> createState() => _PhoneEntryScreenState();
}

class _PhoneEntryScreenState extends State<PhoneEntryScreen> {
  final TextEditingController _phoneController = TextEditingController();
  CountryCode _selectedCode = CountryCode.fromCountryCode('ZW');
  bool _isSending = false;
  bool _isDetecting = true;
  String? _devicePhone; // +263771234567

  @override
  void initState() {
    super.initState();
    detectSimNumber();
  }

  Future<void> detectSimNumber() async {
    setState(() => _isDetecting = true);

    try {
      var status = await Permission.phone.request();
      if (status.isGranted) {
        String? mobile = await MobileNumber.mobileNumber;
        if (mobile != null && mobile.isNotEmpty) {
          String cleaned = mobile.replaceAll(RegExp(r'\D'), '');
          if (cleaned.startsWith('263')) cleaned = cleaned.substring(3);
          if (cleaned.startsWith('0')) cleaned = cleaned.substring(1);

          final String full = '+263$cleaned';
          setState(() {
            _devicePhone = full;
            _phoneController.text = cleaned; // show 771234567
            _selectedCode = CountryCode(
              dialCode: '+263',
              code: 'ZW',
              name: 'Zimbabwe',
            );
          });
        }
      }
    } catch (e) {
      debugPrint('SIM detection failed: $e');
    } finally {
      setState(() => _isDetecting = false);
    }
  }

  Future<void> _sendOtp() async {
    if (_phoneController.text.trim().isEmpty) {
      _showError('Phone number is required');
      return;
    }

    final String entered =
        _selectedCode.dialCode! + _phoneController.text.trim();

    // BLOCK fake numbers on Android
    if (_devicePhone != null && entered != _devicePhone) {
      _showError(
        'You can only use the number on this phone:\n0${_devicePhone!.substring(4)}',
      );
      return;
    }

    setState(() => _isSending = true);

    try {
      final response = await http
          .post(
            Uri.parse('$_baseUrl?action=send_otp'),
            headers: {'Content-Type': 'application/json'},
            body: jsonEncode({'phone': entered}),
          )
          .timeout(const Duration(seconds: 30));

      if (response.statusCode == 200) {
        final data = jsonDecode(response.body);
        debugPrint('API: $data');

        if (data['dev_otp'] != null) {
          await NotificationService.showOtpNotification(
            data['dev_otp'].toString(),
          );
        }

        if (data['error'] != null) {
          _showError(data['error']);
        } else {
          ScaffoldMessenger.of(context).showSnackBar(
            const SnackBar(
              content: Text('OTP sent! Check your notifications'),
              backgroundColor: Colors.green,
            ),
          );
          Navigator.push(
            context,
            MaterialPageRoute(
              builder: (_) => PhoneOtpVerifyScreen(phone: entered),
            ),
          );
        }
      } else {
        _showError('Failed to send OTP');
      }
    } catch (e) {
      _showError('Network error: $e');
    } finally {
      if (mounted) setState(() => _isSending = false);
    }
  }

  void _showError(String msg) {
    if (mounted) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(msg),
          backgroundColor: Colors.red,
          duration: const Duration(seconds: 5),
        ),
      );
    }
  }

  @override
  void dispose() {
    _phoneController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.white,
      appBar: AppBar(
        title: Text(
          'Phone Number',
          style: GoogleFonts.inter(fontWeight: FontWeight.bold),
        ),
        backgroundColor: Colors.white,
        elevation: 0,
        foregroundColor: Colors.black87,
        centerTitle: true,
      ),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(24.0),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.stretch,
            children: [
              const SizedBox(height: 20),
              Text(
                'Verify Your Phone Number',
                style: GoogleFonts.inter(
                  fontSize: 24,
                  fontWeight: FontWeight.bold,
                  color: Colors.black87,
                ),
              ),
              const SizedBox(height: 8),
              Text(
                "We detected your number from SIM card",
                style: GoogleFonts.inter(
                  fontSize: 16,
                  color: Colors.grey.shade600,
                ),
              ),

              const SizedBox(height: 40),

              Row(
                children: [
                  CountryCodePicker(
                    onChanged: (_) {}, // locked
                    initialSelection: 'ZW',
                    enabled: false,
                    textStyle: GoogleFonts.inter(fontSize: 18),
                    padding: EdgeInsets.zero,
                  ),
                  const SizedBox(width: 16),
                  Expanded(
                    child: TextField(
                      controller: _phoneController,
                      keyboardType: TextInputType.phone,
                      readOnly:
                          _devicePhone !=
                          null, // completely locked if SIM detected
                      decoration: InputDecoration(
                        prefixText: '0',
                        prefixStyle: GoogleFonts.inter(
                          fontSize: 18,
                          color: Colors.black87,
                        ),
                        filled: true,
                        fillColor: _devicePhone != null
                            ? Colors.green.shade50
                            : Colors.grey.shade50,
                        border: OutlineInputBorder(
                          borderRadius: BorderRadius.circular(12),
                        ),
                        enabledBorder: OutlineInputBorder(
                          borderRadius: BorderRadius.circular(12),
                          borderSide: BorderSide(color: Colors.green.shade300),
                        ),
                        focusedBorder: OutlineInputBorder(
                          borderRadius: BorderRadius.circular(12),
                          borderSide: const BorderSide(
                            color: Color(0xFF667eea),
                            width: 2,
                          ),
                        ),
                      ),
                      style: GoogleFonts.inter(fontSize: 18),
                    ),
                  ),
                ],
              ),

              if (_devicePhone != null) ...[
                const SizedBox(height: 16),
                Container(
                  padding: const EdgeInsets.all(12),
                  decoration: BoxDecoration(
                    color: Colors.green.shade50,
                    borderRadius: BorderRadius.circular(8),
                    border: Border.all(color: Colors.green.shade300),
                  ),
                  child: Row(
                    children: [
                      const Icon(
                        Icons.verified_user,
                        color: Colors.green,
                        size: 20,
                      ),
                      const SizedBox(width: 8),
                      Text(
                        'Verified from SIM: 0${_devicePhone!.substring(4)}',
                        style: GoogleFonts.inter(
                          fontWeight: FontWeight.w600,
                          color: Colors.green.shade800,
                        ),
                      ),
                    ],
                  ),
                ),
              ],

              if (_isDetecting) ...[
                const SizedBox(height: 20),
                const Center(child: CircularProgressIndicator()),
                const SizedBox(height: 10),
                Text(
                  'Detecting SIM card...',
                  textAlign: TextAlign.center,
                  style: GoogleFonts.inter(color: Colors.grey),
                ),
              ],

              const Spacer(),

              SizedBox(
                height: 56,
                child: ElevatedButton(
                  onPressed: _isSending || _isDetecting ? null : _sendOtp,
                  style: ElevatedButton.styleFrom(
                    backgroundColor: const Color(0xFF667eea),
                    shape: RoundedRectangleBorder(
                      borderRadius: BorderRadius.circular(12),
                    ),
                  ),
                  child: _isSending
                      ? const CircularProgressIndicator(color: Colors.white)
                      : Text(
                          'Send OTP',
                          style: GoogleFonts.inter(
                            fontSize: 18,
                            fontWeight: FontWeight.bold,
                            color: Colors.white,
                          ),
                        ),
                ),
              ),
              const SizedBox(height: 20),
            ],
          ),
        ),
      ),
    );
  }
}

// ===================================================================
// EMAIL ENTRY SCREEN
// ===================================================================
class EmailEntryScreen extends StatefulWidget {
  const EmailEntryScreen({super.key});
  @override
  State<EmailEntryScreen> createState() => _EmailEntryScreenState();
}

class _EmailEntryScreenState extends State<EmailEntryScreen> {
  final TextEditingController _emailController = TextEditingController();
  bool _isSending = false;

  Future<void> _sendEmailOtp() async {
    final String email = _emailController.text.trim();

    if (email.isEmpty || !RegExp(r'^[^@]+@[^@]+\.[^@]+').hasMatch(email)) {
      _showError('Please enter a valid email address');
      return;
    }

    setState(() => _isSending = true);

    try {
      // First check if email already exists
      final checkResponse = await http.post(
        Uri.parse('$_baseUrl?action=check_email_exists'),
        headers: {'Content-Type': 'application/json'},
        body: jsonEncode({'email': email}),
      );

      if (checkResponse.statusCode == 200) {
        final checkData = jsonDecode(checkResponse.body);
        if (checkData['exists'] == true) {
          _showError(
            'Email already registered. Please use another email or login.',
          );
          setState(() => _isSending = false);
          return;
        }
      }

      // Send OTP
      final response = await http
          .post(
            Uri.parse('$_baseUrl?action=send_email_otp'),
            headers: {'Content-Type': 'application/json'},
            body: jsonEncode({'email': email}),
          )
          .timeout(const Duration(seconds: 30));

      if (response.statusCode == 200) {
        final data = jsonDecode(response.body);
        debugPrint('API: $data');

        if (data['dev_otp'] != null) {
          await NotificationService.showOtpNotification(
            data['dev_otp'].toString(),
          );
        }

        if (data['error'] != null) {
          _showError(data['error']);
        } else {
          ScaffoldMessenger.of(context).showSnackBar(
            const SnackBar(
              content: Text('OTP sent to your email!'),
              backgroundColor: Colors.green,
            ),
          );
          Navigator.push(
            context,
            MaterialPageRoute(
              builder: (_) => EmailOtpVerifyScreen(email: email),
            ),
          );
        }
      } else {
        _showError('Failed to send OTP');
      }
    } catch (e) {
      _showError('Network error: $e');
    } finally {
      if (mounted) setState(() => _isSending = false);
    }
  }

  void _showError(String msg) {
    if (mounted) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(msg),
          backgroundColor: Colors.red,
          duration: const Duration(seconds: 5),
        ),
      );
    }
  }

  @override
  void dispose() {
    _emailController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.white,
      appBar: AppBar(
        title: Text(
          'Email Address',
          style: GoogleFonts.inter(fontWeight: FontWeight.bold),
        ),
        backgroundColor: Colors.white,
        elevation: 0,
        foregroundColor: Colors.black87,
        centerTitle: true,
      ),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(24.0),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.stretch,
            children: [
              const SizedBox(height: 20),
              Text(
                'Verify Your Email Address',
                style: GoogleFonts.inter(
                  fontSize: 24,
                  fontWeight: FontWeight.bold,
                  color: Colors.black87,
                ),
              ),
              const SizedBox(height: 8),
              Text(
                "We'll send a verification code to your email",
                style: GoogleFonts.inter(
                  fontSize: 16,
                  color: Colors.grey.shade600,
                ),
              ),
              const SizedBox(height: 40),

              TextField(
                controller: _emailController,
                keyboardType: TextInputType.emailAddress,
                decoration: InputDecoration(
                  labelText: 'Email Address',
                  prefixIcon: const Icon(Icons.email),
                  filled: true,
                  fillColor: Colors.grey.shade50,
                  border: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(12),
                  ),
                  focusedBorder: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(12),
                    borderSide: const BorderSide(
                      color: Color(0xFF764ba2),
                      width: 2,
                    ),
                  ),
                ),
                style: GoogleFonts.inter(fontSize: 18),
              ),

              const SizedBox(height: 20),
              Container(
                padding: const EdgeInsets.all(12),
                decoration: BoxDecoration(
                  color: Colors.blue.shade50,
                  borderRadius: BorderRadius.circular(8),
                  border: Border.all(color: Colors.blue.shade300),
                ),
                child: Row(
                  children: [
                    const Icon(Icons.info, color: Colors.blue, size: 20),
                    const SizedBox(width: 8),
                    Expanded(
                      child: Text(
                        'Email OTP is cost-effective and secure. Check your inbox (and spam folder).',
                        style: GoogleFonts.inter(color: Colors.blue.shade800),
                      ),
                    ),
                  ],
                ),
              ),

              const Spacer(),

              SizedBox(
                height: 56,
                child: ElevatedButton(
                  onPressed: _isSending ? null : _sendEmailOtp,
                  style: ElevatedButton.styleFrom(
                    backgroundColor: const Color(0xFF764ba2),
                    shape: RoundedRectangleBorder(
                      borderRadius: BorderRadius.circular(12),
                    ),
                  ),
                  child: _isSending
                      ? const CircularProgressIndicator(color: Colors.white)
                      : Text(
                          'Send OTP',
                          style: GoogleFonts.inter(
                            fontSize: 18,
                            fontWeight: FontWeight.bold,
                            color: Colors.white,
                          ),
                        ),
                ),
              ),
              const SizedBox(height: 20),
            ],
          ),
        ),
      ),
    );
  }
}

// ===================================================================
// PHONE OTP VERIFY SCREEN
// ===================================================================
class PhoneOtpVerifyScreen extends StatefulWidget {
  final String phone;
  const PhoneOtpVerifyScreen({super.key, required this.phone});
  @override
  State<PhoneOtpVerifyScreen> createState() => _PhoneOtpVerifyScreenState();
}

class _PhoneOtpVerifyScreenState extends State<PhoneOtpVerifyScreen> {
  final TextEditingController _otpController = TextEditingController();
  bool _isVerifying = false;

  Future<void> _verifyOtp() async {
    if (_otpController.text.length != 6) {
      _showError('Enter 6-digit OTP');
      return;
    }

    setState(() => _isVerifying = true);

    try {
      final response = await http.post(
        Uri.parse('$_baseUrl?action=verify_otp'),
        headers: {'Content-Type': 'application/json'},
        body: jsonEncode({'phone': widget.phone, 'otp': _otpController.text}),
      );

      if (response.statusCode == 200) {
        final data = jsonDecode(response.body);
        if (data['verified'] == true) {
          Navigator.push(
            context,
            MaterialPageRoute(
              builder: (_) => PhoneRegisterDetailsScreen(phone: widget.phone),
            ),
          );
        } else {
          _showError(data['error'] ?? 'Invalid OTP');
        }
      } else {
        _showError('Verification failed: ${response.statusCode}');
      }
    } catch (e) {
      _showError('Network error: $e');
    } finally {
      setState(() => _isVerifying = false);
    }
  }

  void _showError(String msg) {
    if (mounted) {
      ScaffoldMessenger.of(
        context,
      ).showSnackBar(SnackBar(content: Text(msg), backgroundColor: Colors.red));
    }
  }

  @override
  void dispose() {
    _otpController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Verify OTP'),
        backgroundColor: Colors.white,
        elevation: 0,
      ),
      body: Padding(
        padding: const EdgeInsets.all(24),
        child: Column(
          children: [
            const SizedBox(height: 40),
            Text(
              'Enter 6-digit code sent to\n${widget.phone}',
              textAlign: TextAlign.center,
              style: GoogleFonts.inter(fontSize: 18),
            ),
            const SizedBox(height: 40),
            TextField(
              controller: _otpController,
              keyboardType: TextInputType.number,
              textAlign: TextAlign.center,
              maxLength: 6,
              style: GoogleFonts.inter(
                fontSize: 24,
                fontWeight: FontWeight.bold,
              ),
              decoration: InputDecoration(
                filled: true,
                fillColor: Colors.grey.shade50,
                border: OutlineInputBorder(
                  borderRadius: BorderRadius.circular(12),
                ),
              ),
            ),
            const SizedBox(height: 30),
            ElevatedButton(
              onPressed: _isVerifying ? null : _verifyOtp,
              style: ElevatedButton.styleFrom(
                minimumSize: const Size(double.infinity, 56),
                backgroundColor: const Color(0xFF667eea),
              ),
              child: _isVerifying
                  ? const CircularProgressIndicator(color: Colors.white)
                  : const Text('Verify', style: TextStyle(fontSize: 18)),
            ),
          ],
        ),
      ),
    );
  }
}

